                <TextBlock Grid.Column="1" 
                           FontSize="24"
                           TextWrapping="Wrap"
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI"
                           Text="{Binding Title}"
                           Foreground="{StaticResource AccentColorBrush}" />
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Distribution Channel" 
                           Padding="4"
                           Foreground="White" />
                <ComboBox ItemsSource="{Binding CurrentConfiguration.AvailableChannels}" 
                          SelectedItem="{Binding CurrentConfiguration.SelectedChannel, Mode=TwoWay}" />
                <TextBlock Text="Office Edition" 
                           Padding="4"
                           Foreground="White"
                           Margin="0,12,0,0" />
                <ComboBox ItemsSource="{Binding CurrentConfiguration.AvailableEditions}" 
                          SelectedItem="{Binding CurrentConfiguration.SelectedEdition, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1"
                    Grid.Column="0" 
                    Margin="12">
            <CheckBox Content="Enable updates" 
                      IsChecked="{Binding CurrentConfiguration.EnableUpdates, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" />
            <CheckBox Content="Auto activate Office" 
                      IsChecked="{Binding CurrentConfiguration.AutoActivate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" 
                      Margin="0,8" />
            <CheckBox Content="Force apps shutdown to install" 
                      IsChecked="{Binding CurrentConfiguration.ForceAppShutdown, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" />
            <CheckBox Content="Pin icons to taskbar (if supported)" 
                      IsChecked="{Binding CurrentConfiguration.PinIconsToTaskBar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" 
                      Margin="0,8" />
            <CheckBox Content="Silent mode (no UI)" 
                      IsChecked="{Binding CurrentConfiguration.SilentMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" />
            <CheckBox Content="Accept EULA" 
                      IsChecked="{Binding CurrentConfiguration.AcceptEula, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      FontSize="16" 
                      Margin="0,8" />
        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Languages to include"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="White" />

                <Button Content="Choose languages"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="12,0"
                        HorizontalAlignment="Left"
                        Command="{Binding ManageAddedLanguagesCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding CurrentConfiguration.AddedLanguages, Mode=OneWay}"
                     Margin="0,12,0,0"
                     SelectionMode="Single"
                     Background="Transparent"
                     Visibility="{Binding CurrentConfiguration.AddedLanguages.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <ListBox.Resources>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       FontSize="14"
                                       Text="{Binding Name}" 
                                       Foreground="White"
                                       VerticalAlignment="Stretch" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="No languages added" 
                       FontSize="14"
                       Foreground="White"
                       Padding="4"
                       Visibility="{Binding CurrentConfiguration.AddedLanguages.Count, Converter={StaticResource CountToOppositeVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal"
                        Margin="0,24,0,0">
                <TextBlock Text="Programs to exclude"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="White" />

                <Button Content="Choose programs"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="12,0"
                        HorizontalAlignment="Left"
                        Command="{Binding ManageExcludedProductsCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding CurrentConfiguration.ExcludedProducts, Mode=OneWay}"
                     Margin="0,12,0,0"
                     SelectionMode="Single"
                     Background="Transparent"
                     Visibility="{Binding CurrentConfiguration.ExcludedProducts.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <ListBox.Resources>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       FontSize="14"
                                       Text="{Binding Name}" 
                                       Foreground="White"
                                       VerticalAlignment="Stretch" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Text="No products excluded" 
                       FontSize="14"
                       Foreground="White"
                       Padding="4"
                       Visibility="{Binding CurrentConfiguration.ExcludedProducts.Count, Converter={StaticResource CountToOppositeVisibilityConverter}}" />
        </StackPanel>

        <Grid Grid.Row="2" 
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                <Button Content="Load"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="16"
                        Command="{Binding LoadCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
                <Button Content="Save"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="0,16,16,16" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock TextAlignment="Center"
                           Foreground="{StaticResource AccentColorBrush}"
                           Text="Selected file path" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Padding="4" />
                <TextBlock TextAlignment="Center"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Text="{Binding SelectedFilePath, Mode=OneWay}" />
            </StackPanel>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button Content="Download"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="16"
                        Command="{Binding DownloadCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
                <Button Content="Install"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        BorderBrush="DarkGray"
                        BorderThickness="2.5"
                        Padding="20,10"
                        Margin="0,16,16,16"
                        Command="{Binding InstallCommand}"
                        Style="{StaticResource AccentedSquareButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
